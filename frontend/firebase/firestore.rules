rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Each user manages their own private data
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Public profile info (username, avatar, latest score if shared)
    match /publicProfiles/{uid} {
      allow read: if true; // visible to all
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Friend requests: only participants can read/update
    match /friendRequests/{id} {
      allow create: if request.auth != null
        && request.resource.data.fromUid == request.auth.uid;

      allow read, update, delete: if request.auth != null
        && (resource.data.fromUid == request.auth.uid
            || resource.data.toUid == request.auth.uid);
    }

    // Friendships: only members can read. 
    // Should be created by your backend or trusted process (not directly by client)
    match /friendships/{id} {
      allow read: if request.auth != null
        && request.auth.uid in resource.data.members;
      allow write: if false; // client cannot directly create friendships
    }
  }
}
